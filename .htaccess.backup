# Minimal .htaccess - use this if the main one causes issues
# Tailoring Management System - Minimal Configuration

# Handle 404 errors only
ErrorDocument 404 /tailoring/404.php

# Hide sensitive files
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

# Protect config files
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>